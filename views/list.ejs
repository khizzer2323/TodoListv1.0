
<%-include("header")-%>

    <body>
        <div class="box">
            <h2>
                <%= listTitle %>
            </h2>
        </div>

        <div class="box">

            <% for(var i=0; i <newListItems.length; i++ ){ %>
                <div class="item">
                    <input type="checkbox" placeholder="Enter">

                    <p>
                        <%= newListItems[i] %>
                    </p>
                </div><br>
                <% } %>
        </div>
        <div class="form">
            <form method='post' action="/">

                <input placeholder="Enter new item" type="text" name="newLi" autocomplete="off" autofocus="on">
                <button type="submit" name="list" value=<%=listTitle %>>+</button>

            </form>
        </div>
        <%-include("footer")-%>
    </body>

    </html>